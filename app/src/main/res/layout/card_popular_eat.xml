<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/popular_img"
            android:layout_width="280dp"
            android:layout_height="150dp"
            android:padding="10dp"
            android:paddingEnd="70dp"
            android:src="@drawable/chicken"/>
        <TextView
            android:id="@+id/nameDish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/popular_dishes"
            android:layout_marginStart="17dp"
            android:fontFamily="@font/muller_bold"
            android:textColor="@color/button_color"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/descriptionDish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textStyle="bold"
            android:layout_marginStart="17dp"
            android:fontFamily="@font/sfns_display_bold"
            android:textColor="@color/full_grey_x2"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginStart="16dp"
                android:numStars="5" />

            <TextView
                android:id="@+id/rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:layout_marginStart="100dp"
                android:text="5.0"
                android:fontFamily="@font/sfns_display_bold"
                android:textColor="@color/button_color"
                android:textSize="12sp" />
        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>